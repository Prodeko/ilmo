{
  "name": "ilmo",
  "version": "0.0.1",
  "private": true,
  "description": "Ilmoittaudu tapahtumiin",
  "scripts": {
    "setup": "yarn && yarn setup:env auto && yarn setup:db && yarn setup:packages",
    "setup:env": "node ./scripts/setup_env.mjs",
    "setup:db": "node ./scripts/setup_db.mjs",
    "setup:packages": "yarn nxmany --target=setup",
    "start": "node ./scripts/start.mjs",
    "test": "node scripts/test.mjs",
    "posttest": "yarn nxmany --target=posttest",
    "test:watch": "node scripts/test.mjs --watch",
    "lint": "tsc -b && yarn prettier:all --check && yarn eslint .",
    "lint:fix": "yarn eslint --fix . && yarn prettier:all --write && jsonsort @app/client/src/translations",
    "eslint": "ESLINT_USE_FLAT_CONFIG=false eslint --ext .js,.jsx,.ts,.tsx,.graphql",
    "prettier:all": "prettier --ignore-path .eslintignore \"**/*.{js,jsx,ts,tsx,graphql,md}\"",
    "build": "yarn nxmany --target=build",
    "nxmany": "nx run-many --all --parallel --exclude=docker-helpers",
    "clean": "node ./scripts/clean.mjs",
    "reset": "yarn clean && node ./scripts/delete-env-file.mjs",
    "tsc": "tsc -b ./@app/lib/tsconfig.cjs.json tsconfig.json",
    "concurrently": "concurrently --kill-others-on-fail --names \"TSC,WATCH,RUN\" --prefix \"({name})\" --prefix-colors \"yellow.bold,yellow.bold,cyan.bold,greenBright.bold\" \"tsc -b --watch --preserveWatchOutput\" \"yarn nxmany --target=watch\" \"yarn nxmany --target=dev\"",
    "dev": "nx run graphql:build && yarn tsc && yarn concurrently",
    "depcheck": "yarn nxmany --target=depcheck",
    "upgrade-packages": "ncu --deep -u",
    "--shortcuts to run commands in workspaces--": "",
    "client": "yarn workspace @app/client",
    "components": "yarn workspace @app/components",
    "db": "yarn workspace @app/db",
    "e2e": "yarn workspace @app/e2e",
    "graphql": "yarn workspace @app/graphql",
    "lib": "yarn workspace @app/lib",
    "server": "yarn workspace @app/server",
    "worker": "yarn workspace @app/worker",
    "docker": "cd ./docker && yarn",
    "docker-compose": "cd ./docker yarn compose",
    "postinstall": "npx next telemetry disable && patch-package"
  },
  "author": "Prodeko webbitiimi <cto@prodeko.org>",
  "license": "SEE LICENSE IN LICENSE.md",
  "dependencies": {
    "@app/db": "workspace:@app/db",
    "@emotion-icons/material": "^3.14.0",
    "abort-controller": "^3.0.0",
    "chalk": "^5.3.0",
    "core-js": "^3.36.1",
    "nx": "18.2.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-is": "18.2.0",
    "regenerator-runtime": "0.14.1",
    "server": "^1.0.39",
    "string-width": "^7.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/preset-env": "^7.24.4",
    "@babel/preset-typescript": "^7.24.1",
    "@faker-js/faker": "^8.4.1",
    "@graphql-eslint/eslint-plugin": "^3.20.1",
    "@nx/eslint": "18.2.4",
    "@nx/eslint-plugin": "18.2.4",
    "@nx/jest": "18.2.4",
    "@nx/js": "18.2.4",
    "@nx/react": "18.2.4",
    "@nx/web": "18.2.4",
    "@nx/workspace": "18.2.4",
    "@types/jest": "29.5.12",
    "@types/react": "18.2.79",
    "@types/react-dom": "18.2.25",
    "@types/server": "^1",
    "@typescript-eslint/eslint-plugin": "7.6.0",
    "@typescript-eslint/parser": "7.6.0",
    "chalk-pipe": "^6.0.0",
    "concurrently": "^8.2.2",
    "depcheck": "^1.4.7",
    "dotenv": "^16.4.5",
    "eslint": "8.56.0",
    "eslint-config-next": "^14.2.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jest": "^28.2.0",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "7.34.1",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "graphql": "^16.8.1",
    "graphql-config": "^5.0.3",
    "inquirer": "^9.2.18",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "json-sort-cli": "^4.0.3",
    "node-addon-api": "^8.0.0",
    "node-gyp": "^10.1.0",
    "nodemon": "^3.1.0",
    "npm-check-updates": "^16.14.18",
    "nx": "18.2.4",
    "patch-package": "^8.0.0",
    "prettier": "3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "10.9.2",
    "type-fest": "^4.15.0",
    "typescript": "5.4.5"
  },
  "resolutions": {
    "graphql": "15.x",
    "graphql-upload": "13.x"
  },
  "workspaces": {
    "packages": [
      "@app/*",
      "docker"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "proseWrap": "always",
    "semi": false,
    "overrides": [
      {
        "files": [
          "*.yml",
          "*.yaml"
        ],
        "options": {
          "printWidth": 120
        }
      }
    ]
  },
  "packageManager": "yarn@4.1.1",
  "engines": {
    "node": ">=21"
  }
}
