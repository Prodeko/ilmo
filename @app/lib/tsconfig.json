{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist/esm",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "declarationDir": "dist/types",
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "esnext",
    "isolatedModules": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "../graphql/client.json",
    "../graphql/introspection.min.json"
  ],
  "references": [{ "path": "../graphql" }]
}
