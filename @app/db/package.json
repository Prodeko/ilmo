{
  "name": "@app/db",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "gm": "NODE_OPTIONS=\"-r @app/config/env\" yarn graphile-migrate",
    "migrate": "yarn gm migrate",
    "watch": "yarn gm watch",
    "commit": "yarn gm commit",
    "uncommit": "yarn gm uncommit",
    "reset": "yarn gm reset",
    "dump": "yarn gm migrate && yarn gm reset --shadow --erase && yarn gm migrate --shadow --forceActions",
    "test": "NODE_ENV=test NODE_OPTIONS=\"-r @app/config/env\" yarn jest",
    "create-fake-data": "ts-node -r @app/config/env scripts/create-fake-data.ts",
    "clean-fake-data": "ts-node -r @app/config/env scripts/clean-fake-data.ts",
    "depcheck": "depcheck --ignores=\"dayjs\""
  },
  "dependencies": {
    "graphile-migrate": "^1.3.0"
  },
  "devDependencies": {
    "@app/graphql": "workspace:*",
    "@types/pg": "8.6.5",
    "faker": "^6.6.6",
    "jest": "^28.1.0",
    "lodash": "^4.17.21",
    "pg": "^8.7.3"
  }
}
