{% extends "base.mjml.njk" %}

{% block headerContent %}
<mj-column width="100%">
  <mj-text mj-class="bold-text" color="#fff" padding="30px">
    Click below to reset your password.
  </mj-text>
</mj-column>
{% endblock %}

{% block content %}
<mj-column width="50%">
  <mj-text align="center" padding-bottom="0">
    Verification code:
  </mj-text>
  <mj-text align="center">
    <span style="font-size: 20px">{{ token }}</span>
  </mj-text>
</mj-column>
<mj-column width="50%">
  <mj-button
    background-color="#002e7d"
    color="#fff"
    font-weight="bold"
    border="none"
    border-radius="0px"
    href="{{ verifyLink }}"
    >Change Passphrase</mj-button
  >
</mj-column>
{% endblock %}
