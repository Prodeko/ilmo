{
  "name": "@app/worker",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "gw": "cd dist && NODE_OPTIONS=\"-r @app/config/env\" graphile-worker --crontab ../crontab",
    "build": "tsc -b",
    "start": "yarn gw",
    "dev": "yarn run --inspect gw --watch",
    "install-db-schema": "mkdirp dist && yarn gw --schema-only",
    "depcheck": "depcheck"
  },
  "dependencies": {
    "@app/config": "workspace:*",
    "@types/html-to-text": "^8.0.1",
    "@types/mjml": "^4.7.0",
    "@types/nodemailer": "^6.4.4",
    "chalk": "^4.1.2",
    "dayjs": "^1.10.6",
    "graphile-worker": "^0.11.4",
    "html-to-text": "^8.0.0",
    "ioredis": "^4.27.9",
    "mjml": "^4.10.2",
    "nodemailer": "^6.6.3",
    "nunjucks": "^3.2.3",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@types/nunjucks": "^3.1.5",
    "mkdirp": "^1.0.4"
  }
}
