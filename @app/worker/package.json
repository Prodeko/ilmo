{
  "name": "@app/worker",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "gw": "cd dist && cross-env NODE_OPTIONS=\"$NODE_OPTIONS -r @app/config/env\" graphile-worker",
    "build": "tsc -b",
    "start": "yarn gw",
    "dev": "cross-env NODE_OPTIONS=\"$NODE_OPTIONS --inspect=9757\" yarn gw --watch",
    "install-db-schema": "mkdirp dist && yarn gw --schema-only",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=\"$NODE_OPTIONS -r @app/config/env\" jest"
  },
  "dependencies": {
    "@app/config": "0.0.0",
    "@types/html-to-text": "^6.0.0",
    "@types/lodash": "^4.14.168",
    "@types/mjml": "^4.7.0",
    "@types/nodemailer": "^6.4.0",
    "chalk": "^4.1.0",
    "cross-env": "^7.0.3",
    "graphile-worker": "^0.8.1",
    "handy-redis": "^2.2.1",
    "html-to-text": "^6.0.0",
    "lodash": "^4.17.20",
    "mjml": "^4.8.1",
    "nodemailer": "^6.4.17",
    "tslib": "^2.1.0"
  },
  "devDependencies": {
    "jest": "^26.6.3",
    "mkdirp": "^1.0.4"
  }
}
