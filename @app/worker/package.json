{
  "name": "@app/worker",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "gw": "cd dist && node -r @app/config/env ../node_modules/.bin/graphile-worker",
    "build": "tsc -b",
    "start": "yarn gw",
    "dev": "cd dist && node -r @app/config/env --inspect=9757 ../node_modules/.bin/graphile-worker --watch",
    "install-db-schema": "mkdir -p dist && yarn gw --schema-only",
    "test": "NODE_ENV=test node -r @app/config/env ./node_modules/.bin/jest"
  },
  "dependencies": {
    "@app/config": "0.0.0",
    "@sendgrid/mail": "^7.2.2",
    "@types/html-to-text": "^5.1.1",
    "@types/lodash": "^4.14.158",
    "@types/mjml": "^4.0.4",
    "@types/nodemailer": "^6.4.0",
    "aws-sdk": "^2.725.0",
    "chalk": "^4.1.0",
    "graphile-worker": "^0.6.0",
    "html-to-text": "^5.1.1",
    "lodash": "^4.17.19",
    "mjml": "^4.6.3",
    "nodemailer": "^6.4.11",
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "jest": "^26.2.2"
  }
