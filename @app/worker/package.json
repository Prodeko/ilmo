{
  "name": "@app/worker",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "gw": "cd dist && NODE_OPTIONS=\"-r @app/config/env\" graphile-worker --crontab ../crontab",
    "build": "tsc -b",
    "start": "yarn gw",
    "dev": "yarn run --inspect gw --watch",
    "install-db-schema": "mkdirp dist && yarn gw --schema-only",
    "depcheck": "depcheck --ignores=\"tslib\""
  },
  "dependencies": {
    "@app/config": "workspace:*",
    "@app/lib": "workspace:*",
    "chalk": "^5.0.1",
    "dayjs": "^1.11.2",
    "graphile-worker": "^0.13.0",
    "html-to-text": "^8.2.0",
    "ioredis": "^5.0.4",
    "mjml": "^4.12.0",
    "nodemailer": "^6.7.5",
    "nunjucks": "^3.2.3"
  },
  "devDependencies": {
    "@types/html-to-text": "^8.1.0",
    "@types/mjml": "^4.7.0",
    "@types/nodemailer": "^6.4.4",
    "@types/nunjucks": "^3.2.1",
    "mkdirp": "^1.0.4"
  }
}
